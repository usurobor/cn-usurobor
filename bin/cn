#!/usr/bin/env node

/**
 * cn - Coherent Network agent CLI
 * 
 * This is a thin wrapper that invokes the bundled OCaml code (via Melange).
 * OCaml source: tools/src/cn/
 * Bundled JS: dist/cn.js
 */

const path = require('path');
const fs = require('fs');

const distPath = path.join(__dirname, '..', 'dist', 'cn.js');

if (!fs.existsSync(distPath)) {
  console.error('Error: dist/cn.js not found.');
  console.error('Run "npm run build" in the cn-agent directory first.');
  process.exit(1);
}

require(distPath);
